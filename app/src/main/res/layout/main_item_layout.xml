<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_main_group_icon">

    <LinearLayout
        android:id="@+id/linear_layout_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_group_icon"
        android:layout_width="63dp"
        android:layout_height="56dp"
        android:src="@drawable/com_facebook_button_icon_blue" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/linear_layout_image"
        android:layout_toEndOf="@id/linear_layout_image"
        android:paddingLeft="@dimen/padding_main_group_icon"
        android:paddingStart="@dimen/padding_main_group_icon">

    <TextView
        android:id="@+id/textview_group_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textview_travel_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textview_travel_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>